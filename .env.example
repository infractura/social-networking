# Twitter API Credentials
SOCIAL_TWITTER__CLIENT_ID=
SOCIAL_TWITTER__CLIENT_SECRET=

# Global Settings
SOCIAL_DEBUG=false
SOCIAL_DEFAULT_TIMEOUT=30
SOCIAL_DEFAULT_RETRIES=3

# Rate Limiting
SOCIAL_TWITTER__RATE_LIMIT_CALLS=300
SOCIAL_TWITTER__RATE_LIMIT_PERIOD=900

# Batch Processing
SOCIAL_BATCH_SIZE=10
SOCIAL_BATCH_INTERVAL=60

# Storage
SOCIAL_TOKEN_STORE_PATH=~/.social_integrator/tokens.json

# Logging
SOCIAL_LOG_LEVEL=INFO
SOCIAL_LOG_FILE=social_integrator.log
